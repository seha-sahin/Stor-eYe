<div class="container">
  <h1>Edit Storage Location</h1>

  <%= form_with(model: @storage_location, local: true) do |form| %>
    <% if @storage_location.errors.any? %>
      <div class="alert alert-warning">
        <ul>
          <% @storage_location.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :address %>
      <%= form.text_field :address, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :capacity %>
      <%= form.number_field :capacity, class: "form-control", required: true, min: 0 %>
    </div>

    <div class="form-group">
      <%= form.label :temperature %>
      <%= form.select :temperature, ["Frozen", "Refrigerated", "Room temperature"], {}, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :restaurant_id %>
      <%= form.collection_select(:restaurant_id, Restaurant.all, :id, :name, {prompt: "Select a Restaurant"}, {class: "form-control", required: true}) %>
    </div>

    <div class="form-group">
      <%= link_to "Add New Restaurant", new_restaurant_path, class: "btn btn-outline-primary" %>
    </div>

    <div class="form-group">
      <%= form.submit "Update Storage Location", class: "btn btn-primary" %>
      <%= link_to "Cancel", storage_locations_path, class: "btn btn-link" %>
    </div>
  <% end %>
</div>
