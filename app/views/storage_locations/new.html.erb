<body class="bg-color">
  <div class="container">
    <div class="row">
      <div class="row mt-4">
        <h2 class="col-11">New storage</h2>
        <div class="col-1 align-self-center">
        <%= link_to "", restaurants_path, class: "fas fa-arrow-left me-3" %>
        </div>
        <div class="container main-box col-12">
        <h5 class="border-bottom"><strong>Storage informations</strong></h5>
          <%= form_for @storage_location do |f| %>
          <div class="row col-12">
            <div class="form-group col-6">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control', required: true %>
            </div>
            <div class="form-group col-6">
              <%= f.label :address %>
              <%= f.text_field :address, class: 'form-control', required: true %>
            </div>
          </div>

          <div class="row col-12">
            <div class="form-group col-4">
              <%= f.label :restaurant_id %>
              <%= f.collection_select(:restaurant_id, Restaurant.all, :id, :name, {prompt: "Select a Restaurant"}, {class: "form-select", required: true}) %>
            </div>

            <div class="form-group col-4">
              <%= f.label :capacity %>
              <%= f.email_field :capacity, class: 'form-control', required: true %>
            </div>

            <div class="form-group col-4">
              <%= f.label :temperature %>
              <%= f.select :temperature, StorageLocation::TEMPERATURES,  { class: "form-select" }, required: true %>
            </div>
          </div>
        </div>

          <%= f.submit 'Create', class: 'btn-home col-12 mb-3' %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</body>
