<div class="container">
  <h1 class="text-center mb-4">Storage Locations</h1>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= link_to "New Storage Location", new_storage_location_path, class: "btn btn-primary mb-4" %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Capacity</th>
            <th>Temperature</th>
            <th>Restaurant</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @storage_locations.each do |storage_location| %>
            <tr>
              <td><%= storage_location.name %></td>
              <td><%= storage_location.address %></td>
              <td><%= storage_location.capacity %></td>
              <td><%= storage_location.temperature %></td>
              <td><%= storage_location.restaurant.name %></td>
              <td>
                <%= link_to "Show", storage_location_path(storage_location), class: "btn btn-sm btn-primary" %>
                <%= link_to "Edit", edit_storage_location_path(storage_location), class: "btn btn-sm btn-warning" %>
                <%= link_to "Delete", storage_location_path(storage_location), method: :delete, data: { confirm: "Are you sure you want to delete this storage location?" }, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
