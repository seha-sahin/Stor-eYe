<div class="container">
  <h1>Storage Location Details</h1>

  <p><strong>Name:</strong> <%= @storage_location.name %></p>
  <p><strong>Address:</strong> <%= @storage_location.address %></p>
  <p><strong>Capacity:</strong> <%= @storage_location.capacity %></p>
  <p><strong>Temperature:</strong> <%= @storage_location.temperature %></p>
  <p><strong>Restaurant:</strong> <%= @storage_location.restaurant.name %></p>

  <%= link_to "Edit", edit_storage_location_path(@storage_location), class: "btn btn-primary" %>
  <%= link_to "Back", storage_locations_path, class: "btn btn-link" %>
</div>
