<div class="container">
  <h1>Restaurants</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.phone_number %></td>
          <td>
            <%= link_to 'Show', restaurant, class: 'btn btn-primary' %>
            <%= link_to 'Edit', edit_restaurant_path(restaurant), class: 'btn btn-secondary' %>
            <%= link_to 'Destroy', restaurant_path(restaurant), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this course?" }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Restaurant', new_restaurant_path, class: 'btn btn-success' %>
</div>
