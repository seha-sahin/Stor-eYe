<body class="bg-color">
  <div class="container main-box mt-3">
    <div class="row col-12">
      <h1 class="col-10">Restaurants</h1>
      <%= link_to "New restaurant", new_restaurant_path, class: "btn-create col-2 mb-3 mt-3" %>
    </div>
    <div class="container">
      <h1 class="text-center mb-4"></h1>
      <div class="row justify-content-center">
        <div class="col-12">
          <table class="table container txt-s">
            <thead class="table-title py-3">
              <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @restaurants.each do |restaurant| %>
                <tr>
                  <td><%= restaurant.name %></td>
                  <td><%= restaurant.address %></td>
                  <td><%= phone_to restaurant.phone_number, class: "link_to" %></td>
                  <td>
                    <%= link_to "", restaurant, class: "fas fa-search me-3" %>
                    <%= link_to "", edit_restaurant_path(restaurant), class: "fas fa-edit me-3" %>
                    <%= link_to "", restaurant_path(restaurant), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this restaurant?" }, class: "fas fa-trash-alt" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </body>
    </div>
  </div>
