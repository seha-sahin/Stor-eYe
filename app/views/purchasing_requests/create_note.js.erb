<% if @note.persisted? %>
  // If the note was successfully saved, add it to the list of notes
  $('#notes').prepend('<%= j render @note %>');
  $('#note_content').val('');
<% else %>
  // If there was an error, display the error messages
  $('#note_errors').html('<%= j render 'shared/error_messages', object: @note %>');
<% end %>
