<div class="container mt-5">
  <h1>New Purchase Request</h1>

  <%= form_with(model: @purchasing_request, local: true) do |form| %>
    <% if @purchasing_request.errors.any? %>
      <div class="alert alert-danger">
        <ul>
        <% @purchasing_request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :supplier_id %>
      <%= form.collection_select(:supplier_id, Supplier.all, :id, :name, prompt: true, class: 'form-control') %>
      <%= link_to 'Add new supplier', new_supplier_path, class: 'btn btn-primary mt-3' %>
    </div>

    <div class="form-group">
      <%= form.label :pr_quantity %>
      <%= form.number_field :pr_quantity, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :delivery_date %>
      <%= form.date_field :delivery_date, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :delivery_time_slot %>
      <%= form.select :delivery_time_slot, ["9-12 AM", "12-3 PM", "3-6 PM"], prompt: true, class: 'form-control' %>
    </div>

    <%= form.submit 'Create Purchase Request', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to 'Back', purchasing_requests_path, class: 'btn btn-secondary' %>
</div>
