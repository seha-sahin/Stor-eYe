<%= form_with(model: purchasing_request_item, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :wine_id, "Wine" %>
    <%= form.collection_select :wine_id, @wines, :id, :name, { prompt: "Select a wine" }, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.label :quantity, "Quantity" %>
    <%= form.number_field :quantity, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :unit_price, "Unit Price" %>
    <%= form.text_field :unit_price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :total_price, "Total Price" %>
    <%= form.text_field :total_price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Create", class: "btn btn-primary" %>
  </div>
<% end %>
