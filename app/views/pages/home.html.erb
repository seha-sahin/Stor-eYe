<body class="bg-img">
  <div class="container mt-4">
    <div class="row">
      <div class="col-6 pt-2 mb-1">
        <div class="card-home">
            <h3><i class="fa fa-archive" aria-hidden="true"></i> STOCK</h3>
          <div class="row col-12">
            <div class="col-6"><%= link_to "CURRENT STOCK", wines_path, class: "btn-main-left" %></div>
            <div class="col-6"><%= link_to "+ NEW WINE", new_wine_path, class: "btn-main-right" %></div>
          </div>
        </div>
      </div>
      <div class="col-6 pt-2 mb-1">
        <div class="card-home">
            <h3><i class="fa fa-shopping-cart" aria-hidden="true"></i> PURCHASING REQUESTS</h3>
          <div class="row col-12">
            <div class="col-6"><%= link_to "CURRENT PR", purchasing_requests_path, class: "btn-main-left" %></div>
            <div class="col-6"><%= link_to "+ NEW PR", new_purchasing_request_path, class: "btn-main-right" %></div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-6 pt-2 mb-1">
        <div class="card-home">
            <h3><i class="fa fa-truck" aria-hidden="true"></i> SUPPLIERS</h3>
          <div class="row col-12">
            <div class="col-6"><%= link_to "ALL SUPPLIERS", suppliers_path, class: "btn-main-left" %></div>
            <div class="col-6"><%= link_to "+ NEW SUPPLIER", new_supplier_path, class: "btn-main-right" %></div>
          </div>
        </div>
      </div>
      <div class="col-6 pt-2 mb-1">
        <div class="card-home">
            <h3><i class="fa fa-map-marker" aria-hidden="true"></i> RESTAURANTS</h3>
          <div class="row col-12">
            <div class="col-6"><%= link_to "ALL RESTAURANTS", restaurants_path, class: "btn-main-left" %></div>
            <div class="col-6"><%= link_to "+ NEW RESTAURANT", new_restaurant_path, class: "btn-main-right" %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container main-box mt-5 col-10">
    <div style="width: 100%; height: 300px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</body>
