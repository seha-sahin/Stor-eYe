<div class="container">
  <h1>Edit Supplier</h1>
  <%= form_for(@supplier, html: { class: "form-horizontal" }) do |f| %>
    <div class="form-group">
      <%= f.label :name, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :phone_number, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :phone_number, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :contact_full_name, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :contact_full_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :contact_phone_number, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :contact_phone_number, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :contact_email, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.email_field :contact_email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :comment, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_area :comment, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Update Supplier", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
