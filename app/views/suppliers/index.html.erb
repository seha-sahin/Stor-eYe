<body class="bg-color">
  <div class="container main-box mt-3">
    <div class="row col-12">
      <h1 class="col-10">Suppliers</h1>
      <%= link_to "New Supplier", new_supplier_path, class: "btn-create col-2 mb-3 mt-3" %>
    </div>
    <div >
    <table class="table container txt-s">
      <thead class="table-title py-3">
        <tr>
          <th>Name</th>
          <th>ðŸ“ž</th>
          <th>Email</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @suppliers.each do |supplier| %>
          <tr>
            <td><%= supplier.name %></td>
            <td><%= phone_to supplier.phone_number %></td>
            <td><%= mail_to supplier.email %></td>
            <td>
              <%= link_to "", supplier_path(supplier), class: "fas fa-search me-3" %>
              <%= link_to "", edit_supplier_path(supplier), class: "fas fa-edit me-3" %>
              <%= link_to "", supplier_path(supplier), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this supplier?" }, class: "fas fa-trash-alt" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</body>
